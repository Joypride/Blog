{% extends "base.html.twig" %}

{% block title %}Modifier l'article{% endblock %}

{% block content %}

<h1 class="text-center mt-5">Modifier l'article</h1>
<div class="contentform">
     
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <form class="wrapp" method="post" role="form" action="/post/update" enctype="multipart/form-data">
            <div class="form-group text-center">
              <label class="cabinet center-block">
                <figure class="rounded-circle">
                  <img src="{{ post.image }}" class="gambar img-fluid rounded-circle" id="output" />
                  <figcaption><i class="fa fa-camera"></i></figcaption>
                </figure>
                <input type="file" onchange="loadFile(event)" class="item-img file center-block" name="image" />
              </label>
            </div>
            <div class="form-group">
              <label class="label-form">Titre</label>
              <input type="text" class="form-control" name="title" required="required" value="{{ post.title }}"/>
            </div>
            <div class="form-group">
              <div class="form-group">
                <select type="text" class="form-control" name="category" required="required">
                  <option value"">Catégorie</option>
                  {% for c in category %}
                  <option value="{{ c.id }}">{{ c.title }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="label-form">Chapô</label>
                <textarea class="form-control headline-text mb-4" name="headline" required="required">{{ post.headline }}</textarea>
              </div>
            <div class="form-group">
              <label class="label-form">Contenu</label>
              <textarea class="form-control" required="required" name="content">{{ post.content }}</textarea>
            </div>
            <div class="form-group">
               <input type="submit" value="Modifier" class="submit-form mt-4" />
            </div>
            <input type="hidden" name="id" value="{{ post.id }}">
          </form>
        </div>
      </div>
    </div>
  
</div>
{% endblock %}
