{% extends "base.html.twig" %}

{% block title %}Mes articles{% endblock %}

{% block content %}

<!-- Add a post -->
<table class="table mt-5">
    <thead class="thead-light">
      <tr>
        <th colspan="3" class="text-center">Ajouter un article</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="text-center">
            <div><a href="?controller=post&action=add"><i class="fas fa-plus-circle fa-2x add-post"></i></a></div>
        </td>
      </tr>
    </tbody>
  </table>

{% if session.admin == 1 %}
<!-- Categories -->
<table class="table">
  <thead class="thead-light">
    <tr>
      <th colspan="3" class="text-center">Catégories</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="text-center">      
        <div class="d-flex justify-content-center flex-wrap">
          {% for tag in tags %} 
            <span class="all-tags mr-3 mt-2">{{ tag.title }}<a href="?controller=category&action=delete&id={{ tag.id }}"><i class="fas fa-times article-action"></i></a></span>
          {% endfor %}
        </div>
        <form method="post" action="?controller=category&action=add">
          <span class="tag-input mt-4">
            <input 
              type="text"
              name="category"
              placeholder="Nouvelle catégorie"
              data-role="tagsinput"
            />
          </span>
          <button class="btn-tag"><i class="fas fa-plus-circle fa-2x add-post"></i></button>
        </form>
      </td>
    </tr>
  </tbody>
</table>
{% endif %}

<!-- Pending post -->
<table class="table">
    <thead class="thead-light">
      <tr>
        <th colspan="3" class="text-center">Articles en attente de validation ({{ countp }})</th>
      </tr>
    </thead>
    <tbody>
      {% for post in pending %}
      <tr>
        <td>
            <div class="article-img-table">
                <img src="{{ post.image }}">
            </div>
        </td>
        <td class="align-middle">{{ post.title }}</td>
        <td class="align-middle">
            <div class="col-lg-4 post-action d-flex align-items-center">
                <div><a href="?controller=post&action=single&id={{ post.id }}"><i class="far fa-eye mr-4 article-action"></i></a></div>
                <div><a href="?controller=post&action=edit&id={{ post.id }}"><i class="fas fa-pen-fancy mr-4 article-action"></i></a></div>
                <div><a href="?controller=post&action=delete&id={{ post.id }}"><i class="fas fa-trash mr-4 article-action"></i></div>
            </div>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
<!-- Published post -->
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th colspan="3" class="text-center">Articles en ligne ({{ countv }})</th>
      </tr>
    </thead>
    <tbody>
      {% for post in validated %}
      <tr>
        <td>
            <div class="article-img-table">
                <img src="{{ post.image }}">
            </div>
        </td>
        <td class="align-middle">{{ post.title }}</td>
        <td class="align-middle">
            <div class="col-lg-4 post-action d-flex align-items-center">
                <div><a href="?controller=post&action=single&id={{ post.id }}"><i class="far fa-eye mr-4 article-action"></i></a></div>
                <div><a href="?controller=post&action=edit&id={{ post.id }}"><i class="fas fa-pen-fancy mr-4 article-action"></i></a></div>
                <div><a href="?controller=post&action=delete&id={{ post.id }}"><i class="fas fa-trash mr-4 article-action"></i></div>
                <div class="position-relative"><a href="?controller=comment&action=newComment&id={{ post.id }}"><i class="far fa-comment-dots article-action"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        2
                    </span>
                </div>
            </div>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

<!-- Refused post -->
<table class="table">
  <thead class="thead-light">
    <tr>
      <th colspan="3" class="text-center">Articles refusés ({{ countr }})</th>
    </tr>
  </thead>
  <tbody>
    {% for post in refused %}
    <tr>
      <td>
          <div class="article-img-table">
              <img src="{{ post.image }}">
          </div>
      </td>
      <td class="align-middle">{{ post.title }}</td>
      <td class="align-middle">
          <div class="col-lg-4 post-action d-flex align-items-center">
              <div><a href="?controller=post&action=single&id={{ post.id }}"><i class="far fa-eye mr-4 article-action"></i></a></div>
          </div>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}