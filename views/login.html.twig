{% extends "base.html.twig" %}

{% block title %}Espace Membre{% endblock %}

{% block content %}
<!-- hero section -->
<div class="container mb-5" id="hero">
    <div class="row justify-content-end">
        <div class="col-lg-6 hero-img-container">
            <div class="hero-img">
                <img src="./public/img/login.jpg">
            </div>
        </div>	  		

        <div class="col-lg-9">
            <div class="hero-title">
                <h1>Espace Membre</h1>
            </div>

        </div>
        <div class="col-lg-6">
            <form method="post">
                <div class="form-group">
                  <input type="email" class="form-control login-form" id="email" placeholder="Email" name="email" required>
                </div>
                <div class="form-group">
                  <input type="password" class="form-control login-form" id="password" placeholder="Mot de passe" name="password" required>
                  {{ errorMessage }}
                </div>
                <button type="submit" id="login-btn" class="btn deep-purple btn-block ">Connexion</button>  
                <a href="/home/register" class="not-member">Pas encore membre ?</a>        
            </form>
        </div>
    </div>
</div>

</div>
<!-- hero ends -->
{% endblock %}
