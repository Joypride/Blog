{% extends "base.html.twig" %}

{% block title %}Modification du mot de passe{% endblock %}

{% block content %}
<div class="container mb-5" id="hero">
    <div class="row justify-content-end">
        <div class="col-lg-6 hero-img-container">
            <div class="hero-img">
                <img src="./public/img/password.jpg">
            </div>
        </div>
        
        <div class="col-lg-9">
            <div class="hero-title">
                <h1>Changer mon mot de passe</h1>
            </div>
        </div>

        <div class="col-lg-6">
            <form method="POST" action="?controller=user&action=changePassword">
                <div class="form-group">
                    <input type="password" class="form-control register-form" id="old_pass" placeholder="Ancien mot de passe" name="old_pass" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control register-form" id="new_password" placeholder="Nouveau mot de passe" name="new_password" onkeyup='check();' required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control register-form" id="confirm_password" placeholder="Confirmez votre mot de passe" name="confirm_password" onkeyup='check();' required>
                </div>
                <span id='message'></span>
                <button type="submit" id="register-btn" class="btn deep-purple btn-block ">Modifier</button>  
                {% if error %}
                <div class="mt-3 alert alert-danger">{{ error }}</div>
                {% endif %}        
                {% if success %} 
                <div class="mt-3 alert alert-success">{{ success }}</div>  
                {% endif %}        
            </form>
        </div>
    </div>
</div>

{% endblock %}

